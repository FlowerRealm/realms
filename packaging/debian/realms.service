[Unit]
Description=Realms（OpenAI 风格 API 中转）
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=realms
Group=realms
WorkingDirectory=/var/lib/realms
EnvironmentFile=/etc/realms/realms.env
ExecStart=/usr/bin/realms
Restart=on-failure
RestartSec=2s

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/realms

[Install]
WantedBy=multi-user.target
